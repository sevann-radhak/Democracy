@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <div class="row">
        <div class="col-md-4">
            <h1>Democracy</h1>
            <p class="lead">Voting system for school</p>
            @if (!this.User.IsInRole("Admin") && !this.User.IsInRole("User"))
            {
                <p class="lead">To use the system, please log in with email and password</p>
            }
        </div>
        <div class="col-md-8">
            <img src="~/Content/Images/Democracy-pic.png" alt="Democracy" />
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>My Settings</h2>
        <p>
            Change your personal data and password.
        </p>
        @Html.ActionLink("Settings", "MySettings", "Users", new { }, new { @class = "btn btn-warning" })
    </div>
    <div class="col-md-4">
        <h2>My votings</h2>
        <p>Vote for the different candidates</p>
        @Html.ActionLink("My votings", "MyVotings", "Votings", new { }, new { @class = "btn btn-info" })
    </div>
    <div class="col-md-4">
        <h2>Results</h2>
        <p>See the votation results</p>
        @Html.ActionLink("Results", "Results", "Votings", new { }, new { @class = "btn btn-primary" })
    </div>
</div>
